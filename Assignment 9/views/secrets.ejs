<%- include('partials/header')%>

<div class="jumbotron jumbotron-fluid">
  <div class="container text-light">
    <h1 class="display-4">Your Info</h1>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Name:</label>
      <div class="col-sm-10">
        <p><%= user.name %></p>
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Email:</label>
      <div class="col-sm-10">
        <p><%= user.email %></p>
      </div>
    </div>
    <div class="mb-3 row">
      <label class="col-sm-2 col-form-label">Secret:</label>
      <div class="col-sm-10">
        <p><%= user.Secret %></p>
      </div>
    </div>
    <div class="options">
      <a class="btn btn-primary btn-lg logout" href="/home" role="button">Log Out</a>
      <div class="btn btn-primary btn-lg" id="update-secret" role="button">Update Secret</div>
      <form id="upt-secret" class="d-none mt-3" action="/update" method="post">
        <div class="mb-3">
          <label for="secretImp" class="form-label">Name</label>
          <input type="text" class="form-control" id="secretImp" name="name" value="<%= user.name %>"readonly >
          <label for="secretImp" class="form-label">Email</label>
          <input type="text" class="form-control" id="secretImp" name="email" value="<%= user.email %>" readonly>
          <label for="secretImp" class="form-label">New Secret</label>
          <input type="text" class="form-control" id="secretImp" name="secret">
          <div class="form-text">We'll never share your secret with anyone else.</div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>

<!-- Add jQuery if you use it -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
<script>
  $("#update-secret").on("click", function() {
    $("#update-secret").toggleClass("d-none");
    $("#upt-secret").toggleClass("d-none");
  });
</script>
<%- include('partials/footer')%>
