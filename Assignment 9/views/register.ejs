<%- include('partials/header')%>
<div class="login bg-dark text-light ">
    <form action="/register" method="post">
        <div class="mb-3">
            <label for="username" class="form-label">Your Name</label>
            <input type="text" class="form-control" id="username" required name="name">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" required name="email">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <div class="toggle">
              <input type="password" class="form-control" id="password" required name="password">
              <div class="toggle t-icons"><div id="show"><ion-icon name="eye-outline"></ion-icon></div><div id="noshow" class="d-none"><ion-icon name="eye-off-outline" ></ion-icon></div></div>
            </div>      
        </div>
        <div class="alert alert-warning d-none" id="pass-alert" role="alert">
            Password must contain a lowercase letter, uppercase letter, a number, and be at least 6 characters long.
        </div>
        <button id="register-btn" type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    $("form").on("submit", function(event){
    var passwordValue = $("#password").val();
    var passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{6,}$/;
    if (!passwordPattern.test(passwordValue)) {
        $("#pass-alert").removeClass("d-none");
        event.preventDefault(); 
    } else {
        $("#pass-alert").addClass("d-none");
         alert("Register Successfully ðŸ¥³"); 
    }
    });
     $("#show").on("click",function(){
      $("#show").toggleClass("d-none");
      $("#noshow").toggleClass("d-none");
      $("#password").attr("type", "text");
    });
    $("#noshow").on("click",function(){
      $("#show").toggleClass("d-none");
      $("#noshow").toggleClass("d-none");
      $("#password").attr("type", "password");
    })
</script>
<%- include('partials/footer')%>
