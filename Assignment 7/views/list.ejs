<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo List</title>
    <link rel="stylesheet" href="css/styles.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
</head>
</head>
<body class="text-dark the-list">
    <div class="box">
        <h1>Todo List</h1>
    </div>
    <div class="box ">
        <% for(var i=0; i< ejes.length; i++) { %>
    <div class="item d-flex align-items-center gap-2">
        <input type="checkbox" id="done<%= i %>" class="done-checkbox"> 
        <p class="mb-0" id="para<%= i %>"><%= ejes[i] %></p>
    </div>
<% } %>

</div>

        <form action="/" method="POST">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Enter your task</label>
                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="ele1">
            </div>
            <button type="submit" method="POST" class="btn btn-primary">Add it</button>
        </form>
    </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>$(".done-checkbox").click(function() {
    // get the checkbox id, e.g. 'done3'
    let idNum = this.id.replace("done", "");
    $("#para" + idNum).toggleClass("done");
});
</script>

    </body>
</html>